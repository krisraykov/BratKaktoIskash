@model IEnumerable<Product>

<h2>Всички продукти</h2>
<a asp-action="Create" class="btn btn-success">Добави продукт</a>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price лв.</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Детайли</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>